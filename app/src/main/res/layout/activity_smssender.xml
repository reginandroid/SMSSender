<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.regiko.smssender.SMSSender">

    <TextView
        android:layout_width="198dp"
        android:layout_height="0dp"
        android:id="@+id/text"
        android:text="Введите текст сообщения"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/massage"
        android:layout_marginStart="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/massage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteY="19dp"
        tools:layout_editor_absoluteX="-8dp"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/massage"
        android:layout_width="364dp"
        android:layout_height="107dp"
        android:scrollbarSize="50dp"
        android:verticalScrollbarPosition="left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/phone"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="13dp"/>

    <Button
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:text="Выбрать получателя из телефонной книги"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/database"
        android:layout_marginTop="124dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/text"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/database"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:text="Выбрать получатля из базы"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/recievers"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/recievers"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/send"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ОТПРАВИТЬ"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/database"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/recievers"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/phone"/>

    <EditText
        android:id="@+id/recievers"
        android:layout_width="367dp"
        android:layout_height="144dp"
        android:hint="Choose a phone number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="123dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone"
        android:layout_marginLeft="15dp"/>

</android.support.constraint.ConstraintLayout>
